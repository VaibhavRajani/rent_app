{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jasmine", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["spec/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
